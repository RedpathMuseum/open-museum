#!/bin/sh
echo "Starting setup"
current_dir=$(pwd)

# Install wordpress and plugins
echo "Installing dependencies"
composer install

# Symlink wp-content
echo "Symlinking wp-content"
rm $current_dir/wp/wp-content
ln -s $current_dir/wp-content $current_dir/wp/wp-content

# Symlink wp-config.php
echo "Symlinking wp-config.php"
rm $current_dir/wp-config.php
ln -s $current_dir/wp-config.php $current_dir/wp-config.php
